@model Online_Cybersecurity_System.Models.Story
@{
     ViewBag.Title = "InsertStory";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-horizontal" enctype="multipart/form-data">

     <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
               <div class="col">
                    <div class="card card-registration my-4">
                         <div class="row g-0">
                              <div class="row register-form">
                                   @Html.ValidationSummary(true)
                                   <div class="col-md-12">
                                        <div class="col-md-12">
                                             <div class="form-group">
                                                  @Html.LabelFor(s => s.name, new { @class = "control-label col-sm-4" })
                                                  @Html.TextAreaFor(s => s.name, new { data_upper = "" })
                                                  @Html.ValidationMessageFor(s => s.name)
                                             </div>
                                        </div>
                                        <div class="col-md-12">
                                             <div class="form-group">
                                                  @Html.LabelFor(s => s.description, new { @class = "control-label col-sm-4" })
                                                  @Html.TextAreaFor(s => s.description, new { data_upper = "" })
                                                  @Html.ValidationMessageFor(s => s.description)
                                             </div>
                                        </div>
                                        <div class="col-md-12">
                                             <div class="form-group">
                                                  @Html.LabelFor(s => s.src, new { @class = "control-label col-sm-4" })
                                                  @Html.TextAreaFor(s => s.src, new { data_upper = "" })
                                                  @Html.ValidationMessageFor(s => s.src)
                                             </div>
                                        </div>
                                        <div class="col-sm-12">
                                             <div class="form-group">
                                                  @Html.LabelFor(s => s.storyStatus, new { @class = "control-label col-sm-4" })
                                                  <label>@Html.RadioButtonFor(s => s.storyStatus, "Active") Active</label>
                                                  <label>@Html.RadioButtonFor(s => s.storyStatus, "Inactive") Inactive</label>
                                                  @Html.ValidationMessageFor(s => s.storyStatus)
                                             </div>
                                        </div>
                                        <div class="col-sm-12">
                                             <div class="form-group">
                                                  @Html.LabelFor(s => s.createDate, new { @class = "control-label col-sm-4" })
                                                  @Html.TextBoxFor(s => s.createDate, new { data_upper = "", @Value = DateTime.Now.ToShortDateString() })
                                                  @Html.ValidationMessageFor(s => s.createDate)
                                             </div>
                                        </div>
                                        <div class="d-flex justify-content-end pt-3">
                                             <button class="btn btn-warning btn-lg ms-2" onclick="history.go(-1); return false;">Back</button>
                                             <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                                             <button class="btn btn-warning btn-lg ms-2">Insert</button>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</form>