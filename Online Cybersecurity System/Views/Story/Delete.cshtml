@model Online_Cybersecurity_System.Models.Story

@{
     ViewBag.Title = "Delete";
     Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Are you sure you want to delete this?</h3>

<h4>Story</h4>

<div class="container py-5 h-100">
     <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col">
               <div class="card card-registration my-4">
                    <div class="row g-0">
                         <div class="row register-form">
                              @Html.ValidationSummary(true)
                              <div class="col-md-12">
                                   <div class="col-sm-12">
                                        <div class="form-group  mb-4">
                                             @Html.LabelFor(s => s.id, new { @class = "control-label col-sm-4" })
                                             @Html.DisplayFor(s => s.id, new { data_upper = "" })
                                        </div>
                                   </div>
                                   <div class="col-md-12">
                                        <div class="form-group">
                                             @Html.LabelFor(s => s.name, new { @class = "control-label col-sm-4" })
                                             @Html.DisplayFor(s => s.name, new { data_upper = "" })
                                        </div>
                                   </div>
                                   <div class="col-md-12">
                                        <div class="form-group">
                                             @Html.LabelFor(s => s.description, new { @class = "control-label col-sm-4" })
                                             @Html.DisplayFor(s => s.description, new { data_upper = "" })
                                        </div>
                                   </div>
                                   <div class="col-md-12">
                                        <div class="form-group">
                                             @Html.LabelFor(s => s.src, new { @class = "control-label col-sm-4" })
                                             @Html.DisplayFor(s => s.src, new { data_upper = "" })
                                        </div>
                                   </div>
                                   <div class="col-sm-12">
                                        <div class="form-group">
                                             @Html.LabelFor(s => s.storyStatus, new { @class = "control-label col-sm-4" })
                                             @Html.DisplayFor(s => s.storyStatus, new { data_upper = "" })
                                        </div>
                                   </div>
                                   <div class="col-sm-12">
                                        <div class="form-group">
                                             @Html.LabelFor(s => s.createDate, new { @class = "control-label col-sm-4" })
                                             @Html.DisplayFor(s => s.createDate, new { data_upper = "", @Value = DateTime.Now.ToShortDateString() })
                                        </div>
                                   </div>
                                   @using (Html.BeginForm())
                                   {
                                        <div class="d-flex justify-content-end pt-3">
                                             <button class="btn btn-warning btn-lg ms-2" onclick="history.go(-1); return false;">Back</button>
                                             <input type="submit" value="Delete" class="btn btn-default" />
                                        </div>
                                   }
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>