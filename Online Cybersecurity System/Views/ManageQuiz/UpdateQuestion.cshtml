@model Question
@{
    ViewBag.Title = "Update Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-horizontal">
    @*@Html.AntiForgeryToken()*@
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="row register-form">
                            @Html.ValidationSummary(true)
                            <div class="col-md-12">
                                <div class="col-sm-12">
                                    <div class="form-group  mb-4">
                                        @Html.LabelFor(q => q.QuestionId, new { @class = "control-label col-sm-4" })
                                        @Html.TextAreaFor(q => q.QuestionId, new { data_upper = "" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(q => q.QuestionText, new { @class = "control-label col-sm-4" })
                                        @Html.TextAreaFor(q => q.QuestionText, new { data_upper = "" })
                                        @Html.ValidationMessageFor(q => q.QuestionText)
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.LabelFor(q => q.Category.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(q => q.Category.CategoryName, (SelectList)ViewBag.CategoryId, "--Select--", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(q => q.Category.CategoryName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end pt-3">
                                <button class="btn btn-warning btn-lg ms-2" onclick="history.go(-1); return false;">Back</button>
                                <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                                <button class="btn btn-warning btn-lg ms-2">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>