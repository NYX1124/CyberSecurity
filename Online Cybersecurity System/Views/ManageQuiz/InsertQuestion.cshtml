@model Online_Cybersecurity_System.Models.Question
@{
    ViewBag.Title = "InsertQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="row register-form">
                            @Html.ValidationSummary(true)
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(q => q.CategoryId, "CategoryId", new { @class = "control-label col-sm-4" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(q => q.CategoryId, ViewBag.list as SelectList, "--Select--")
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        @Html.LabelFor(q => q.QuestionText, new { @class = "control-label col-sm-4" })
                                        @Html.TextAreaFor(q => q.QuestionText, new { data_upper = "" })
                                        @Html.ValidationMessageFor(q => q.QuestionText)
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end pt-3">
                                    <button type="reset" class="btn btn-light btn-lg">Reset all</button>
                                    <button class="btn btn-warning btn-lg ms-2">Insert</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var c in ViewData["list2"] as List<Online_Cybersecurity_System.Models.Question>)
    {
        <tr>
            <td>@c.QuestionId</td>
            <td>@c.QuestionText</td>
            <td>@c.Category.CategoryName</td>
            <td>
                @Html.ActionLink("Edit", "UpdateQuestion", "ManageQuiz", new { id = c.QuestionId }, null)
                <a href="/ManageQuiz/UpdateQuestion/@c.QuestionId"><button>Update </button></a>
                <a href="/ManageQuiz/DeleteQuestion/@c.QuestionId"><button>Delete</button></a>
            </td>
        </tr>
    }
</table>
