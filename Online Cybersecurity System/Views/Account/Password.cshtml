
@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Password</h2>


<form class="form" method="post">
    @Html.ValidationSummary(true)

    @Html.LabelFor(m => m.Current)
    @Html.PasswordFor(m => m.Current, new { maxlength = 20, autofocus = "" })
    @Html.ValidationMessageFor(m => m.Current)

    @Html.LabelFor(m => m.New)
    @Html.PasswordFor(m => m.New, new { maxlength = 20 })
    @Html.ValidationMessageFor(m => m.New)

    @Html.LabelFor(m => m.Confirm)
    @Html.PasswordFor(m => m.Confirm, new { maxlength = 20 })
    @Html.ValidationMessageFor(m => m.Confirm)

    <section>
        <button>Update</button>
        <button type="reset">Reset</button>
    </section>
</form>